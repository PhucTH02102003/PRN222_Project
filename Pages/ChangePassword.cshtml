@page
@model PRN222_Project.Pages.ChangePasswordModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #D4A5A5, #A3C4F3);
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: flex-start; /* Điều chỉnh vị trí header và footer */
            height: 100vh;
            flex-direction: column;
        }

        .container {
            max-width: 800px; /* Đảm bảo rằng phần nội dung không bị rộng quá */
            margin-top: 20px;
        }

        footer {
            width: 100%;
            bottom: 0;
            position: absolute;
            background-color: #f8f9fa;
            margin-top: 20px;
        }

        header {
            width: 100%;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 100;
            background-color: #ffffff;
        }

        h2 {
            color: #5c3c92; /* Màu tím cho tiêu đề */
            font-size: 30px;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        label {
            display: block;
            font-size: 14px;
            color: #5c3c92; /* Màu tím cho label */
        }

        input[type="password"] {
            width: 100%;
            padding: 12px;
            font-size: 16px;
            border: 2px solid #5c3c92; /* Màu tím cho đường viền */
            border-radius: 8px;
            margin-top: 8px;
            margin-bottom: 10px;
            outline: none;
        }

            input[type="password"]:focus {
                border-color: #A3C4F3; /* Màu xanh khi focus vào input */
            }

        button {
            background-color: #A3C4F3; /* Màu xanh cho nút */
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            cursor: pointer;
            width: 100%;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #5c3c92; /* Màu tím khi hover */
            }

        /* Điều chỉnh thông báo lỗi */
        .alert {
            margin-bottom: 20px;
        }
    </style>
</head>

<body>

    <div class="container mt-5">
        <h2>Change Password</h2>

        <!-- Hiển thị thông báo lỗi nếu có -->
        @if (ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <!-- Hiển thị thông báo thành công nếu mật khẩu thay đổi thành công -->
        @if (Model.IsPasswordChanged)
        {
            <div class="alert alert-success">
                <strong>Success!</strong> Your password has been changed successfully.
            </div>
        }

        <form method="post">
            <!-- Current Password -->
            <div class="mb-3">
                <label for="CurrentPassword" class="form-label">Current Password</label>
                <input type="password" id="CurrentPassword" name="CurrentPassword" class="form-control" required />
            </div>

            <!-- New Password -->
            <div class="mb-3">
                <label for="NewPassword" class="form-label">New Password</label>
                <input type="password" id="NewPassword" name="NewPassword" class="form-control" required />
            </div>

            <!-- Confirm New Password -->
            <div class="mb-3">
                <label for="ConfirmNewPassword" class="form-label">Confirm New Password</label>
                <input type="password" id="ConfirmNewPassword" name="ConfirmNewPassword" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

</body>
</html>
